<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--3개 Row-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--3ro Column-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--<TextBlock Text="Row : 0 Column : 0" FontSize="20" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Text="Row : 0 Column : 1" FontSize="20" Grid.Row="0" Grid.Column="1"/>
        <TextBlock Text="Row : 1 Column : 0" FontSize="20" Grid.Row="1" Grid.Column="0"/>
        <TextBlock Text="Row : 1 Column : 1" FontSize="20" Grid.Row="1" Grid.Column="1"/>-->

        <Button Content="Show()" Click="ButtonShow_Click" Grid.Row="0" Grid.Column="0">
        </Button>

        <Button Content="ShowDialog()" Click="ButtonShowDialog_Click" Grid.Row="0" Grid.Column="1">
        </Button>

        
    </Grid>
</Window>
